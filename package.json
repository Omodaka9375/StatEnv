{
  "name": "statenv",
  "version": "1.0.0",
  "description": "Secure Cloudflare Worker API proxy for static apps",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "statenv": "./cli/statenv.js"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "tail:errors": "wrangler tail --status error",
    "tail:cache": "wrangler tail --search Cache",
    "tail:ratelimit": "wrangler tail --search 'Rate limit'",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "check": "prettier --check \"**/*.{js,json,md}\" && node cli/statenv.js validate"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "environment-variables",
    "security",
    "static-sites"
  ],
  "author": "branislav.djalic@gmail.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "prettier": "^3.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  }
}
